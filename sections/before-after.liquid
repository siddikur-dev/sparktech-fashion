{% schema %}
{
  "name": "Before and After Image",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Work Comparison"
    },
    {
      "type": "image_picker",
      "id": "before_img",
      "label": "Before Image"
    },
    {
      "type": "image_picker",
      "id": "after_img",
      "label": "After Image"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Corner Radius",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Before and After",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .ba-wrapper {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
    text-align: center;
  }
  .ba-container {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }
  .ba-box {
    flex: 1;
    min-width: 300px;
  }
  .ba-box img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.border_radius }}px; /* Figma-র মতো গোল কোণা */
    object-fit: cover;
  }
  .ba-label {
    margin-top: 10px;
    font-weight: bold;
    text-transform: uppercase;
  }
</style>

<div class="ba-wrapper">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
  
 <div class="ba-container">
  <div class="ba-box">
    <img 
      src="{{ section.settings.before_img | img_url: 'master' }}" 
      alt="Before"
      width="{{ section.settings.before_img.width }}"
      height="{{ section.settings.before_img.height }}"
      loading="lazy"
    >
    <p class="ba-label">Before</p>
  </div>
  
  <div class="ba-box">
    <img 
      src="{{ section.settings.after_img | img_url: 'master' }}" 
      alt="After"
      width="{{ section.settings.after_img.width }}"
      height="{{ section.settings.after_img.height }}"
      loading="lazy"
    >
    <p class="ba-label">After</p>
  </div>
</div>
</div>