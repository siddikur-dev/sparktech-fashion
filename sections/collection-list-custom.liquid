<div class="category-section-container">
  <div class="page-width">
    <div class="category-header">
      <h2 class="category-main-title">NEW ARRIVALS</h2>
      <div class="yellow-brush-stroke"></div>
    </div>

    <div class="category-grid">
      {% for i in (1..3) %}
        {% capture col_id %}collection_{{ i }}{% endcapture %}
        {% assign collection = section.settings[col_id] %}
        
        <div class="category-item-card">
          <div class="category-img-box">
            {% if collection.image != blank %}
              <img src="{{ collection.image | image_url: width: 800 }}" alt="{{ collection.title }}" loading="lazy">
            {% else %}
              {{ 'collection-' | append: i | placeholder_svg_tag: 'svg-placeholder' }}
            {% endif %}
          </div>
          
          <div class="category-footer">
            <div class="category-text">
              <h3 class="item-name">{{ collection.title | default: "Category Name" }}</h3>
              <p class="item-sub">Explore Now!</p>
            </div>
            <a href="{{ collection.url }}" class="category-arrow-btn">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  /* Section Layout and Margins */
  .category-section-container {
    padding: 60px 0;
    margin-right: 30px; /* Specific right margin as requested */
    margin-left: 30px;  /* Balanced left margin */
  }

  /* Header Styling with Yellow Highlight */
  .category-header {
    margin-bottom: 50px;
    position: relative;
  }
  .category-main-title {
    font-size: 32px;
    font-weight: 900;
    letter-spacing: 1px;
    margin: 0;
    z-index: 2;
    position: relative;
  }
  .yellow-brush-stroke {
    width: 120px;
    height: 12px;
    background: #EBD96B;
    border-radius: 50%;
    position: absolute;
    bottom: -2px;
    left: 80px; /* Positioned under 'ARRIVALS' as per screenshot */
    z-index: 1;
  }

  /* Grid System */
  .category-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  /* Card and Image Styling */
  .category-item-card {
    display: flex;
    flex-direction: column;
  }
  .category-img-box {
    border-radius: 25px; /* Smooth rounded corners */
    overflow: hidden;
    aspect-ratio: 0.8; /* Portrait ratio */
    margin-bottom: 20px;
  }
  .category-img-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  .category-item-card:hover .category-img-box img {
    transform: scale(1.08);
  }

  /* Text and Arrow */
  .category-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .item-name {
    font-size: 22px;
    font-weight: 700;
    margin: 0;
    color: #000;
  }
  .item-sub {
    font-size: 15px;
    color: #7F7F7F;
    margin: 5px 0 0 0;
  }
  .category-arrow-btn {
    color: #7F7F7F;
    transition: 0.3s ease;
  }
  .category-item-card:hover .category-arrow-btn {
    color: #000;
    transform: translateX(5px);
  }

  /* Mobile Responsiveness */
  @media screen and (max-width: 768px) {
    .category-section-container { margin: 30px 15px; }
    .category-grid { grid-template-columns: 1fr; gap: 30px; }
    .category-main-title { font-size: 26px; }
  }
</style>

{% schema %}
{
  "name": "Updated Categories",
  "settings": [
    { "type": "collection", "id": "collection_1", "label": "Category 1" },
    { "type": "collection", "id": "collection_2", "label": "Category 2" },
    { "type": "collection", "id": "collection_3", "label": "Category 3" }
  ],
  "presets": [
    { "name": "Updated Categories" }
  ]
}
{% endschema %}